
>> Animal := Object new.
Animal on: ['new'] do: {
	<- self new init.
}.

Animal on: ['init'] do: {
	own sound := ['?'].
	own legs  := 4.
}.

>> Dog := Animal new.
Dog on: ['init'] do: {
	self init.
	own sound := ['barks'].
}.

Animal on: ['string'] do: {
	<- own legs string + own sound.
}.

>> poodle := Dog new.
Out write: poodle, stop.

